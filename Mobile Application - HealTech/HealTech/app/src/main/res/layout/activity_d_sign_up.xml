<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ScrollView
        android:id="@+id/SignUp_Scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalScrollbarPosition="defaultPosition"
        tools:context=".signlogin.MainActivity">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="207dp"
                android:layout_height="16dp"
                android:layout_marginStart="90dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="90dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <EditText
                android:id="@+id/SignUp_email"
                android:layout_width="372dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:drawableStart="@drawable/custom_email_icon"
                android:background="@drawable/custom_edit_box"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="example@gmail"
                android:inputType="textEmailAddress"
                android:textColor="@color/Teal"
                android:textColorHint="@color/hint_Teal"
                app:layout_constraintBottom_toTopOf="@+id/SignUp_Medical_ID"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SignUp_S_name_box" />

            <TextView
                android:id="@+id/SignUp_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="49dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="304dp"
                android:layout_marginBottom="16dp"
                android:text=" Doctor SignUp"
                android:textColor="@color/Teal"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/SignUp_F_name_box"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.23"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <EditText
                android:id="@+id/SignUp_F_name_box"
                android:layout_width="372dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:drawableStart="@drawable/custom_name_icon"
                android:background="@drawable/custom_edit_box"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:ems="10"
                android:hint="  First Name"
                android:inputType="textPersonName"
                android:textColorHint="@color/hint_Teal"
                app:layout_constraintBottom_toTopOf="@+id/SignUp_S_name_box"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SignUp_Title" />

            <EditText
                android:id="@+id/SignUp_S_name_box"
                android:layout_width="372dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:drawableStart="@drawable/custom_name_icon"
                android:background="@drawable/custom_edit_box"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:ems="10"
                android:hint="  Second Name"
                android:inputType="textPersonName"
                android:textColorHint="@color/hint_Teal"
                app:layout_constraintBottom_toTopOf="@+id/SignUp_email"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SignUp_F_name_box" />

            <EditText
                android:id="@+id/SignUp_Medical_ID"
                android:layout_width="372dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:drawableStart="@drawable/custom_national_id_icon"
                android:background="@drawable/custom_edit_box"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:ems="10"
                android:hint="  Medical ID"
                android:inputType="number"
                android:textColor="@color/Teal"
                android:textColorHint="@color/hint_Teal"
                app:layout_constraintBottom_toTopOf="@+id/SignUp_hospital_or_clinic_ID"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SignUp_email" />

            <EditText
                android:id="@+id/SignUp_hospital_or_clinic_ID"
                android:layout_width="372dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:drawableStart="@drawable/custom_hospital_id_icon"
                android:background="@drawable/custom_edit_box"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:ems="10"
                android:hint="  Hospital or Clinic ID"
                android:inputType="text"
                android:textColor="@color/Teal"
                android:textColorHint="@color/hint_Teal"
                app:layout_constraintBottom_toTopOf="@+id/textView4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SignUp_Medical_ID" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="298dp"
                android:text="Password"
                android:textColor="@color/Teal"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/SignUp_pass"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SignUp_hospital_or_clinic_ID" />

            <EditText
                android:id="@+id/SignUp_pass"
                android:layout_width="372dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:drawableStart="@drawable/custom_password_icon"
                android:background="@drawable/custom_edit_box"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:ems="10"
                android:hint="***"
                android:inputType="textPassword"
                android:textColor="@color/Teal"
                android:textColorHint="#00446B6D"
                app:layout_constraintBottom_toTopOf="@+id/textView5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="290dp"
                android:text="Confirm Password"
                android:textColor="@color/Teal"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/SignUp_Confirm_pass"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SignUp_pass" />

            <EditText
                android:id="@+id/SignUp_Confirm_pass"
                android:layout_width="372dp"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:drawableStart="@drawable/custom_password_icon"
                android:background="@drawable/custom_edit_box"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:ems="10"
                android:hint="***"
                android:inputType="textPassword"
                android:textColor="@color/Teal"
                android:textColorHint="#00446B6D"
                app:layout_constraintBottom_toTopOf="@+id/signup_btn_D"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />


            <Button
                android:id="@+id/signup_btn_D"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/my_button"
                android:text="sign up"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SignUp_Confirm_pass" />


        </android.support.constraint.ConstraintLayout>

    </ScrollView>
</LinearLayout>